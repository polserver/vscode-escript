{
	"name": "escript-lsp",
	"version": "0.3.0",
	"description": "escript-lsp",
	"contributors": [
		{
			"name": "POL Core Team",
			"url": "https://github.com/polserver"
		}
	],
	"license": "MIT",
	"publisher": "polserver",
	"categories": [],
	"keywords": [],
	"engines": {
		"vscode": "^1.52.0"
	},
	"activationEvents": [
		"*"
	],
	"repository": {
		"url": "https://github.com/polserver/vscode-escript"
	},
	"main": "./client/out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "escript",
				"aliases": [
					"EScript",
					"escript"
				],
				"extensions": [
					".src",
					".inc",
					".em"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "escript",
				"scopeName": "source.escript",
				"path": "./grammars/escript.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run clean && npm run compile",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"watch": "npm run grammar && tsc -b -w",
		"compile": "npm run grammar && tsc -b",
		"clean": "rimraf client/out server/out grammars/escript.json",
		"grammar": "js-yaml grammars/escript.yml > grammars/escript.json",
		"eslint": "eslint \"**/*.{js,ts}\""
	},
	"dependencies": {
		"vscode-languageclient": "^7.0.0"
	},
	"devDependencies": {
		"@types/mocha": "^8.2.0",
		"@types/node": "^12.19.11",
		"@typescript-eslint/parser": "^4.11.0",
		"eslint": "^7.16.0",
		"js-yaml": "^3.14.1",
		"rimraf": "^3.0.2",
		"ts-loader": "^8.0.12",
		"typescript": "^4.1.3"
	}
}
